<div class="d-flex gap-3 justify-content-evenly flex-wrap">
  <% @movies.each do |movie| %>
    <div class="card" style="width: 18rem;">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSuYl9UexgW-fdwSnrL4h_2vx76d9xcVHILbg&usqp=CAU" class="card-img-top" alt="..."> 
      <div class="card-body">
        <h5 class="card-title"><%= link_to "#{movie.title}", movie_path(movie.id) %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <%= movie.release_year %> |
          <%= movie.status %>
        </li>
       </ul>
    </div>
  <% end %>
</div>