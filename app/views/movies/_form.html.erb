<%= form_with model: @movie do |f| %>
  <div>
    <div class="mb-3">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  
    <div class="mb-3">
      <%= f.label :synopsis %>
      <%= f.text_area :synopsis %>
    </div>
  
    <div class="mb-3">
      <%= f.label :release_year %>
      <%= f.date_field :release_year %>  
    </div>

    <div class="mb-3">
      <%= f.label :origin_country %>
      <%= f.text_field :origin_country %>
    </div>

    <div class="mb-3">
      <%= f.label :director_id, "Diretor" %>
      <%= collection_select(:movie, :director_id, Director.all, :id, :name) %>
    </div>
  
